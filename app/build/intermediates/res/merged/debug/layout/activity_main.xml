<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.ishan.gupta.understandingbusinessandeconomics.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/share"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginTop="11sp"
        android:layout_alignParentRight="true"
        android:src="@drawable/share1"
        android:layout_marginRight="20sp"/>

    <TextView
        android:id="@+id/microeconomics"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="25sp"
        android:text="Microeconomics"
        android:gravity="center"
        android:layout_marginTop="20sp"
       android:paddingLeft="20sp"
        android:textColor="#ffffff"
        android:paddingRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/round_corner_background_color"

        android:layout_below="@+id/my_toolbar"/>

    <TextView
        android:id="@+id/finance"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="25sp"
        android:text="Finance"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:paddingLeft="20sp"
        android:textColor="#ffffff"
        android:paddingRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/round_corner_background_color"

        android:layout_below="@+id/microeconomics"/>

    <TextView
        android:id="@+id/economics"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="25sp"
        android:text="Economics"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:paddingLeft="20sp"
        android:textColor="#ffffff"
        android:paddingRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/round_corner_background_color"

        android:layout_below="@+id/finance"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
